<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ControlButton" parent="@style/Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="MainButtons" parent="@style/Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:radius">25dp</item>
    </style>

    <style name="PianoWhiteKey">
        <item name="android:background">@drawable/piano_key_white</item>
    </style>

    <style name="PianoBlackKey">
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">00dp</item>
        <item name="android:elevation">2dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">@id/guideline</item>
    </style>

</resources>
